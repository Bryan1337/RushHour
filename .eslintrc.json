{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": [
            "never"
        ],
        "eol-last": [
            "never"  
        ],
        "padded-blocks": [
            "never"
        ],
        "linebreak-style": ["error", "windows"],
        "quotes": [
            "error", 
            "single"
        ],
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error", 
            4
        ],
        "react/jsx-indent-props": [
            "error", 
            4
        ]
    }
}